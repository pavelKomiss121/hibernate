<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 
            http://www.ehcache.org/schema/ehcache-core-3.10.xsd">

    <!-- Настройки по умолчанию -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache-template>

    <!-- Кэш для сущности User -->
    <cache alias="ru.mentee.power.entity.relationship.User">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
            <offheap unit="MB">20</offheap>
        </resources>
        <listeners>
            <listener>
                <class>ru.mentee.power.cache.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
    </cache>

    <!-- Кэш для сущности Product (READ_ONLY) -->
    <cache alias="ru.mentee.power.entity.relationship.Product">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
        <resources>
            <heap unit="entries">10000</heap>
            <offheap unit="MB">50</offheap>
            <disk unit="MB" persistent="true">100</disk>
        </resources>
    </cache>

    <!-- Кэш для сущности Order -->
    <cache alias="ru.mentee.power.entity.relationship.Order">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Кэш для сущности Customer -->
    <cache alias="ru.mentee.power.entity.relationship.Customer">
        <expiry>
            <ttl unit="minutes">20</ttl>
        </expiry>
        <resources>
            <heap unit="entries">3000</heap>
            <offheap unit="MB">15</offheap>
        </resources>
    </cache>

    <!-- Кэш для коллекций -->
    <cache alias="ru.mentee.power.entity.relationship.Customer.orders">
        <expiry>
            <ttl unit="hours">12</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <!-- Кэш запросов -->
    <cache alias="default-query-results-region">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
            <offheap unit="MB">5</offheap>
        </resources>
    </cache>

    <!-- Кэш для timestamps (обязателен для query cache) -->
    <cache alias="default-update-timestamps-region">
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap unit="entries">5000</heap>
        </resources>
    </cache>

    <!-- Именованный регион для специфичных запросов -->
    <cache alias="product-search-cache">
        <expiry>
            <ttl unit="minutes">15</ttl>
        </expiry>
        <resources>
            <heap unit="entries">1000</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

</config>

